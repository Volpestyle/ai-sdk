{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FaceTrackResult",
  "type": "object",
  "properties": {
    "frame_id": {
      "type": "string"
    },
    "timestamp_ms": {
      "type": "integer"
    },
    "faces": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "track_id": {
            "type": "string"
          },
          "bbox_xywh": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "minItems": 4,
            "maxItems": 4,
            "description": "[x,y,w,h] in pixels"
          },
          "pose_yaw_pitch_roll": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "minItems": 3,
            "maxItems": 3
          },
          "confidence": {
            "type": "number"
          },
          "mouth_roi": {
            "$ref": "#/$defs/roi"
          },
          "face_roi": {
            "$ref": "#/$defs/roi"
          },
          "occlusion_flags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "track_id",
          "bbox_xywh",
          "confidence"
        ]
      }
    }
  },
  "required": [
    "frame_id",
    "timestamp_ms",
    "faces"
  ],
  "$defs": {
    "roi": {
      "type": "object",
      "properties": {
        "crop_xywh": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 4,
          "maxItems": 4
        },
        "affine_2x3": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 6,
          "maxItems": 6
        },
        "normalized_size": {
          "type": "array",
          "items": {
            "type": "integer"
          },
          "minItems": 2,
          "maxItems": 2
        }
      }
    }
  }
}